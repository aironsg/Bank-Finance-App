<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_deposit_receipt_top"
    android:fillViewport="true"
    tools:context=".presentation.ui.features.transfer.TransferFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/bg_deposit_receipt_top"
                android:paddingTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="66dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center_horizontal"
                        android:text="Transferir"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="740dp"

            android:background="@drawable/bg_deposit_receipt_bottom"
            android:paddingTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="Informe a chave Pix e o valor que deseja transferir"
                android:textAlignment="center"
                android:textColor="@color/color_default"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_value_pix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Valor da transferência"
                android:textAlignment="textStart"
                android:textColor="@color/color_default"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_value_pix"
                style="@style/Theme.EditText"
                android:layout_marginHorizontal="32dp"
                android:drawableStart="@drawable/ic_payment"
                android:hint="0.00"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_value_pix" />


            <TextView
                android:id="@+id/text_key_pix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Chave Pix"
                android:textAlignment="textStart"
                android:textColor="@color/color_default"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_value_pix" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_key_pix"
                style="@style/Theme.EditText"
                android:layout_marginHorizontal="32dp"
                android:drawableStart="@drawable/ic_dock"
                android:hint="123.456.789-00"
                android:inputType="textLongMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_key_pix" />
            " />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_button_search_key"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:paddingHorizontal="10dp"
                android:text="Pesquisar"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_key_pix" />

            <View
                android:id="@+id/view4"
                android:layout_width="35dp"
                android:layout_height="2dp"
               android:layout_marginHorizontal="10dp"
                android:background="@color/color_card_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/btn_search_key"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/btn_search_key"
                app:layout_constraintTop_toTopOf="@+id/btn_search_key" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:fontFamily="@font/inter_semibold"
                android:text="OU"
                android:textColor="@color/blue_final"
                app:layout_constraintBottom_toBottomOf="@+id/btn_search_key"
                app:layout_constraintEnd_toStartOf="@+id/btn_qr_code"
                app:layout_constraintStart_toEndOf="@+id/btn_search_key"
                app:layout_constraintTop_toTopOf="@+id/btn_search_key" />

            <View
                android:id="@+id/view5"
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/blue_final"
                app:layout_constraintBottom_toBottomOf="@+id/btn_qr_code"
                app:layout_constraintEnd_toStartOf="@+id/btn_qr_code"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/btn_qr_code" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_qr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_button_qr_code"
                android:drawableStart="@drawable/ic_qr_code"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:paddingHorizontal="10dp"
                android:text="Lê QR Code"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_key_pix" />

            <RadioGroup
                android:id="@+id/radioGroupOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_search_key">

                <RadioButton
                    android:id="@+id/radio_credit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:buttonTint="@color/blue_final" />

                <RadioButton
                    android:id="@+id/radio_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:buttonTint="@color/blue_final" />


            </RadioGroup>


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_credit_card"
                app:layout_constraintBottom_toBottomOf="@+id/credit_card_number"
                app:layout_constraintStart_toEndOf="@+id/radioGroupOptions"
                app:layout_constraintTop_toTopOf="@+id/credit_card_number"
                app:tint="@color/blue_final" />

            <TextView
                android:id="@+id/credit_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="1233 **** **** 4321"
                android:textColor="@color/blue_final"
                app:layout_constraintBottom_toTopOf="@+id/text_balance"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/text_radio_credit_card" />

            <TextView
                android:id="@+id/text_radio_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="CARTÃO DE CRÉDITO"
                android:textColor="@color/color_default"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/text_balance"
                app:layout_constraintStart_toEndOf="@+id/radioGroupOptions"
                app:layout_constraintTop_toTopOf="@+id/radioGroupOptions" />

            <TextView
                android:id="@+id/text_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="SALDO BANCÁRIO"
                android:textColor="@color/color_default"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                app:layout_constraintStart_toEndOf="@+id/radioGroupOptions" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_balance_visibility"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/radioGroupOptions"
                app:layout_constraintStart_toEndOf="@+id/radioGroupOptions">

                <ImageView
                    android:id="@+id/image_balance"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_payment"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/balance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="R$ 1.000,00"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/toggle_visibility"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_visibility"
                app:layout_constraintBottom_toBottomOf="@id/linearLayout5"
                app:layout_constraintStart_toEndOf="@id/linearLayout5"
                app:layout_constraintTop_toTopOf="@+id/linearLayout5"
                app:tint="@color/blue_final" />

            <LinearLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupOptions"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Nome"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Nome do usuário"

                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Valor da Transação"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/text_amount_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/text_value"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_value"
                        tools:text="R$ 150,00" />

                    <!--            Number Phone-->
                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Chave Pix"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_value" />

                    <TextView
                        android:id="@+id/text_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/text_number"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_number"
                        tools:text="jsdfijhfiodfoshdfv" />

                    <!--            Method Payment-->
                    <TextView
                        android:id="@+id/text_type_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Tipo de pagamento"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_number" />

                    <TextView
                        android:id="@+id/text_method_payment_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"

                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/text_type_method"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_type_method"
                        tools:text="Cartão de credito" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_button_login"
                    android:text="continuar"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_key_pix" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:indeterminateTint="@color/color_default"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frameLayout"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>