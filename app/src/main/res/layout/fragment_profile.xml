<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presenter.auth.login.LoginFragment">

    <!-- Parte de cima -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topLayoutLeft"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/bg_top_left"
            android:orientation="vertical"
            android:paddingVertical="0dp"
           >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topLayoutRight"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/bg_top_right"
            android:orientation="vertical"
            android:paddingVertical="0dp"
            >

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="@drawable/bg_profile_bottom"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
